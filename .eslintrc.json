{
    "env": {
        "node": true,
        "es2021": true
    },
    "ignorePatterns": [
        "/dist/**",
        "/tests/**"
    ],
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": [
            "error",
            {
                "comments": 80,
                "code": 120
            }
        ],
        "@typescript-eslint/strict-boolean-expressions": [
            "error",
            {
                "allowNullableObject": true,
                "allowNullableString": true,
                "allowString": true
            }
        ]
    }
}